{
    "extends": ["prettier"],
    "plugins": ["prettier", "react"],
    "parserOptions": {
        "project": "tsconfig.json",
        "tsconfigRootDir": "./"
    },
    "parser": "@typescript-eslint/parser",
    "rules": {
        "no-underscore-dangle": "off",
        "prettier/prettier": ["error", { "endOfLine": "auto" }],
        "no-warning-comments": 1,
        "no-var": "error",
        "no-debugger": 1,
        "import/no-webpack-loader-syntax": "off"
    }
}
